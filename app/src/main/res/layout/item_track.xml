<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size8dp"
        android:paddingRight="@dimen/size8dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_above="@+id/divider"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@+id/imgWishList"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvTitle"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Nothing Like Usdsfsdfsdfsdfsdfsfsfsdfsfsfsf"
                android:layout_marginRight="@dimen/size_14dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"

                android:id="@+id/tvArtist"
                tools:text="Justin Beibersadadadadadadad"
                android:textColor="@android:color/black"
                android:maxLength="18"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/size12sp"
                android:layout_marginRight="@dimen/size_14dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/tvId"
                android:textSize="@dimen/size12sp"
                tools:text="123456789100"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgWishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"/>
    </LinearLayout>




    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>
</LinearLayout>